package repeticao;

import javax.swing.JOptionPane;

public class DesafioDo {
public static void main(String[] args) {
	
	//Missão1 =  O Jogador 1 digita um numero inteiro, a partir dai o jogador 2 deve adivinhar o numero
	//Somente quando ele acertar devera aparecer a msg Parabens, voce acertou!
	
	//Missão2 = Acrescente dica para o Jogador 2 informando se o numero que ele deve adivinhar é maior ou menor 
	
	//acrescente um contador de tentativas e mostre no final ao jogador 2 quando ele 
	//acertar. parabens voce acertou após X tentativas
	//terao que criar uma variavel para contar

	
	int num1 = Integer.parseInt(JOptionPane.showInputDialog("Digite um número: "));
	int num2 = 0;
	do {
		num2 = Integer.parseInt(JOptionPane.showInputDialog("Digite um número: "));
		if(num2>num1) {
			System.out.println("Chute um numero menor....");
		}
		if(num2<num1) {
			System.out.println("Chute um numero maior....");
		}
	}while(num2!= num1);
	
	if(num2==num1) {
		System.out.println("Parabens, Voce acertou!!!");
	}
	
	
	
}
}
